<Window x:Class="Regexer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regexer" Height="350" Width="525">
    <Grid>
        <Button x:Name="ButtonInputFile" Content="Select file" HorizontalAlignment="Left" Margin="396,156,0,0" VerticalAlignment="Top" Width="111" Click="ButtonInput_Click"/>
        <TextBox x:Name="TextBoxInputFile" HorizontalAlignment="Left" Height="23" Margin="94,157,0,0" TextWrapping="Wrap" Text="Select a file" VerticalAlignment="Top" Width="213"/>
        <Label Content="Input" HorizontalAlignment="Left" Margin="94,126,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Output" HorizontalAlignment="Left" Margin="94,197,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="TextBoxOutputFile" HorizontalAlignment="Left" Height="23" Margin="94,228,0,0" TextWrapping="Wrap" Text="Select a file" VerticalAlignment="Top" Width="213"/>
        <Button x:Name="ButtonOutputFile" Content="Select file" HorizontalAlignment="Left" Margin="396,228,0,0" VerticalAlignment="Top" Width="111" Click="ButtonOutput_Click"/>

    </Grid>
</Window>
