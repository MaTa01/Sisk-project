        Title="Regexer" Height="350" Width="525">
    <Grid>
        <Button x:Name="ButtonInputFile" Content="Select file" HorizontalAlignment="Left" Margin="432,156,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
